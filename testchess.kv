<Canvas>:
  orientation: "vertical"

  BoxLayout:
    size_hint: None, None
    pos_hint: {'top': 1}
    size: 600, 600
    Image:
      size_hint: 1, 1
      source: 'img/diagram040.png'
  BoxLayout:
    orientation: "vertical"
    spacing: 5
    BoxLayout:
      size_hint_y: .3
      padding: 10
      Label:
        id: enunciado
        text_size: self.size
        text: "De acuerdo a los temas estudiados, el usuario puede escoger posiciones estudiadas y jugar contra el computador a partir de ellas"
        #text: "Pregunta"
        halign: 'left'
        valign: 'top'
    GridLayout:
      cols: 2
      size_hint_y: .6
      CheckBox:
        group: "r"
        id: r1
        size_hint_x: 0.12
      Label:
        id: text_r1
        text_size: self.size
        text: "Respuesta 1"
        valign: 'middle'
      CheckBox:
        group: "r"
        id: r2
        size_hint_x: 0.12
      Label:
        id: text_r2
        text_size: self.size
        text: "Respuesta 2"
        valign: 'middle'
      CheckBox:
        group: "r"
        id: r3
        size_hint_x: 0.12
      Label:
        id: text_r3
        text_size: self.size
        text: "Respuesta 3"
        valign: 'middle'
      CheckBox:
        group: "r"
        id: r4
        size_hint_x: 0.12
      Label:
        id: text_r4
        text_size: self.size
        text: "Respuesta 4"
        valign: 'middle'
    BoxLayout:
      orientation: "horizontal"
      size_hint_y: .1
      Button:
        text: "<"
      Button:
        text: ">"
        on_press: root.on_press_bt()

Canvas:
